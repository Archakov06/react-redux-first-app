.header
	padding 10px
	box-shadow 0 2px 20px rgba(0, 0, 0, 0.07)
	width 100%
	box-sizing border-box
	z-index 1
	position relative

	&__logo
		display block
		float left
		margin 20px

	&__autorun-checkbox
		cursor pointer
		margin-right 10px

	&__auth
		display block
		float right
		margin 10px


		ul
			li
				display inline-block
				margin-left 5px

	input.button
		padding 12px 25px 12px 40px

	.button--save
		padding: 14px 25px

		svg
			height 12px
			width 12px
			margin-right 7px

	#save
		g
			path
				fill #fff

	#link-svg
		position absolute
		width 12px
		height 12px
		margin 15px 20px
