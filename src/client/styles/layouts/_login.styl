.login-box
  width 440px
  height 460px
  background-color #fff
  border-radius 6px
  box-shadow 0px 3px 15px 0px rgba(0,0,0,0.02)
  position absolute
  left 50%
  top 50%
  transform translate(-50%, -50%)

  &__content
    ul
      width 240px
      margin 50px auto

      li
        margin-bottom 20px

        &:nth-child(2)
          margin-bottom 40px

        &:nth-child(3)
          margin-bottom 15px

        &:nth-child(4)
          margin-bottom 15px

        button
          display block
          padding 15px 60px
          margin 0 auto

          svg
            display inline-block
            width 14px
            height 14px
            vertical-align middle
            margin-right 10px

        label
          display block
          font-weight bold
          margin-bottom 10px

        input
          display block
          width 100%

  &__tabs
    ul
      li
        display inline-block
        width 50%
        text-align center
        background-color #FBFBFB
        padding 23px
        text-transform uppercase
        cursor pointer
        letter-spacing 0.5px

        &.active
          background-color #fff
          cursor auto
