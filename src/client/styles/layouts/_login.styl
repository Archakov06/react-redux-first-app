.login-box
  width 440px
  background-color #fff
  border-radius 6px
  box-shadow 0px 3px 15px 0px rgba(0,0,0,0.05)
  position absolute
  left 50%
  top 10%
  transform translateX(-50%)

  span.login-box__error
    display block
    color #e67878
    border-radius 3px
    padding 5px
    width 100%
    margin-top 10px

  &__content

    ul
      width 240px
      margin 50px auto

      li
        margin-bottom 20px
        position relative

        center
          opacity 0.5

        button
          display block
          padding 15px 60px
          margin 0 auto
          width 190px

          svg
            display inline-block
            width 14px
            height 14px
            vertical-align middle
            margin-right 10px

        label
          display block
          font-weight bold
          margin-bottom 10px

        input
          display block
          width 100%

  &__tabs
    ul
      li
        display inline-block
        width 50%

        a
          display block
          text-align center
          background-color #FBFBFB
          padding 23px
          text-transform uppercase
          cursor pointer
          letter-spacing 0.5px
          text-decoration none
          color $text-color

          &.active
            background-color #fff
            cursor auto
