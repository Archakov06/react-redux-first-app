.button
	display inline-block
	padding 12px 25px
	text-align center
	border 0
	background-color transparent
	border-radius 30px
	letter-spacing $letter-spacing
	font-weight 100
	cursor pointer

	&[disabled]
		opacity 0.6

	&--white
		background-color lighten($sidebar-color, 60%)
		color darken($sidebar-color, 70%)

		&:hover
			background-color lighten($sidebar-color, 40%)

		&:active
			background-color lighten($sidebar-color, 20%)

	&--black
		background-color lighten($text-color, 0%)
		color $bg-color

		&:hover
			background-color lighten($text-color, 10%)

input.button
	&:active
		background-color lighten($sidebar-color, 40%)

select.button
	padding 13px 30px
	-webkit-appearance button
	-moz-appearance button
	-webkit-user-select none
	-moz-user-select none
	text-align center

#select-mode, label.with-arrow
	&:after
		content ''
		display inline-block
		pointer-events none
		position relative
		left -30px
		top -1px
		width 0
		height 0
		transform rotate(180deg)
		border-style solid
		border-width 0 5px 5px 5px
		border-color transparent transparent lighten($chat-author-color,45%) transparent
